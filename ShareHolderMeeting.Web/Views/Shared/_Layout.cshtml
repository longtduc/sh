<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ShareHolder Meeting App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @* This class navbar-inverse is very important. If missed, see nothing in mobile device  *@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("ShareHolder Meeting", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@              
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Đăng ký Cổ đông", "Index", "Registration")</li>
                    <li>@Html.ActionLink("Biểu quyết", "Index", "VotingByHand")</li>
                    <li>@Html.ActionLink("Bầu Cử", "Index", "Voting")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Meeting Admin<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cổ đông", "Index", "ShareHolder")</li>
                            <li>@Html.ActionLink("Ứng viên HDQT", "Index", "Candidate", new { type = 1 }, null)</li>
                            <li>@Html.ActionLink("Ứng viên BKS", "Index", "Candidate", new { type = 2 }, null)</li>
                            <li>@Html.ActionLink("Báo cáo, Tờ trình", "Index", "Statement")</li>
                            <li>@Html.ActionLink("Tạo Phiếu Biểu quyết", "GenerateByHandCards", "VotingByHand")</li>
                            <li>@Html.ActionLink("Tạo lại Phiếu Bầu", "Index", "VotingCard")</li>


                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">User Management<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Manage")</li>
                            <li>@Html.ActionLink("Manage Users", "Index", "User")</li>
                            <li>@Html.ActionLink("Manage Roles", "Index", "Role")</li>                            
                        </ul>
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
